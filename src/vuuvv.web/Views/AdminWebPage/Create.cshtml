@using vuuvv.web.Models.ViewModel;
@using vuuvv.web.Models;
@model vuuvv.web.Models.WebPage

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="/static/lib/ueditor/editor_config.js" type="text/javascript"></script>
<script src="/static/lib/ueditor/editor_all_min.js" type="text/javascript"></script>
<div class="row-fluid">
	<div class="well">
		<ul class="nav nav-tabs">
			<li>
                @Html.ActionLink("页面列表", "Index")
			</li>
			<li class="active">
                @Html.ActionLink("创建页面", "Create")
			</li>
		</ul>
		<div class="tab-content form-horizontal">
			<div class="tab-pane active in">
<form action="/manage/adminwebpage/create" method="post">
    @Html.ValidationSummary(true)
                <div class="control-group">
                    <label class="control-label" for="Name">上级页面</label>
                    <div class="controls">
            @Html.DropDownList("ParentId", String.Empty)
            @Html.ValidationMessageFor(model => model.ParentId)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Order">Order</label>
                    <div class="controls">
            @Html.EditorFor(model => model.Order)
            @Html.ValidationMessageFor(model => model.Order)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Url">URL</label>
                    <div class="controls">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Title">标题</label>
                    <div class="controls">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Content">内容</label>
                    <div class="controls">
                    @Html.TextAreaFor(model => model.Content, new { @class = "input-xxlarge", id = "editor" })
                    @Html.ValidationMessageFor(model => model.Content)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="MetaDescription">网页描述</label>
                    <div class="controls">
                    @Html.TextAreaFor(model => model.MetaDescription, new { @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.MetaDescription)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="MetaKeywords">网页关键字</label>
                    <div class="controls">
                    @Html.TextAreaFor(model => model.MetaKeywords, new { @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.MetaKeywords)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Col">网页列数</label>
                    <div class="controls">
                    @Html.EditorFor(model => model.Col, new { @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.Col)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Active">有效</label>
                    <div class="controls">
                    @Html.CheckBoxFor(model => model.Active)
                    @Html.ValidationMessageFor(model => model.Active)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="InNavigation">是否在导航栏</label>
                    <div class="controls">
                    @Html.CheckBoxFor(model => model.InNavigation)
                    @Html.ValidationMessageFor(model => model.InNavigation)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="HasBanner">是否有横幅</label>
                    <div class="controls">
                    @Html.CheckBoxFor(model => model.HasBanner)
                    @Html.ValidationMessageFor(model => model.HasBanner)
                    </div>
                </div>
				<div class="control-group">
					<div class="controls">
						<button type="submit" class="btn btn-primary">创建</button>
                        <a class="btn" href="@Request.UrlReferrer">返回</a>
                        @Html.Hidden("nextStep", Request.UrlReferrer)
					</div>
                </div>
</form>

			</div>
		</div>
	</div>
</div>
<link media="all" rel="stylesheet" href="/static/js/libs/artdialog/skins/default.css" type="text/css" />
<script type="text/javascript">
    var upload_url = "/manage/adminupload?path=page";
    var options = {
        imageUrl: upload_url,
        imagePath: ""
    };
    var ue = UE.getEditor("editor", options);
</script>
