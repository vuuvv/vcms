@model vuuvv.web.Models.ViewModel.RenderPage

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    vuuvv.web.Helper.Node<vuuvv.web.Models.ProductCategory> category = ViewBag.category;
    vuuvv.web.Helper.Pager<vuuvv.web.Models.Product> helper = ViewBag.helper;
}

<ul class="products clearfix">
    @for (int i = 0; i < helper.Items.Count; i++)
    {
        if (i % 4 == 3)
        {
    @: <li class="last">
        }
        else
        {
    @: <li>
        }
    @: <a href="/product/detail/@(helper.Items[i].Slug.ToLower())" title="@(helper.Items[i].Name)">
			<div class="img-box">
				<img width="215" src="/static/media/@(helper.Items[i].Image)" alt="@(helper.Items[i].Name)">
			</div>
    @: </a>
	@:	<h5>@(helper.Items[i].Name)</h5>
	@:	<p>@(helper.Items[i].Sku)</p>
    @: </li>
    }
</ul>

@Html.Partial("Pager", helper)

@section ExtraCSS {
<link media="all" rel="stylesheet" href="/static/css/product.css" type="text/css" />
<link media="all" rel="stylesheet" href="/static/css/article.css" type="text/css" />
<link media="all" rel="stylesheet" href="/static/css/shadows.css" type="text/css" />
}

@section ExtraJS {
<script src="/static/js/libs/slidesjs/slides.min.jquery.js" type="text/javascript"></script>
<script src="/static/js/preview_box.js" type="text/javascript"></script>
<script type="text/javascript">
$(function() {
	$('#slides').slides({
		preload: true,
		preloadImage: "/static/img/loading.gif",
		play: 3000,
		pause: 3000,
		hoverPause: true,
		pagination: false,
		effect: 'fade'
	});
	var preview = new PreviewBox();
	$("#preview-tech").click(function() {
		var $this = $(this);
		preview.show_img($this.attr("href"));
		return false;
	});
});
</script>
}

@section ExtraHead {
}

@section Overlay {
<div style="z-index: 110;" class="preview-box">
	<div class="preview-container">
		<a style="position:absolute; top:-99999px;" data-btn="focus" href="javascript:;">Focus</a>
		<div data_title="ESC关闭" btn="close" class="preview-close"><b>关闭</b></div>
		<div class="preview-panel">
			<ul style="" rel="img_ctl" class="contents-control">
				<li size="100" style=""><i class="sz-01"></i><b>小图</b></li>
				<li size="480" style=""><i class="sz-02"></i><b>中图</b></li>
				<li size="800" style="" class="focus"><i class="sz-03"></i><b>大图</b></li>
				<li size="1440" style=""><i class="sz-04"></i><b>特大图</b></li>
				<li btn="fullscreen"><i class="sz-04"></i><b>原始图</b></li>
			</ul>
			<ul rel="img_ctl" class="contents-panel" style="">
				<li btn="rotate"><i class="pr-rotate"></i><b>旋转</b></li>
			</ul>
		</div>
		<div rel="con" class="preview-contents">
			<div class="pr-btn-switch">
				<b data_title="按键盘“←”键上一个" btn="prev" class="pr-btn-prev">上一个</b>
    			<b data_title="按键盘“→”键下一个" btn="next" class="pr-btn-next">下一个</b>
			</div>
			<div rel="loading" class="previewer-loading">载入中...</div>
			<div style="overflow: visible;" class="previewer-photo">
				<img style="cursor: move; left: 220px; top: 0px;" src="" ws_property="1">
				<i></i>
			</div>
		</div>
	</div>
</div>
}



@section Banner {
<div class="banner pbanner">
	<div id="slides">
		<div class="slides_container">
            @foreach (var image in category.Data.BannerImages.OrderBy(i => i.Ordering))
            {
			<div class="slide">
				<img src="/static/media/@image.Image">
			</div>
            }
		</div>
	</div>
	<div class="slide-desc">
		<h3>@category.Data.Name</h3>
		<p>@Html.Raw(category.Data.Description)</p>
        @if (!category.Data.FeatureImage.IsEmpty()){
		@: <div class="guide-btn">
		@: 	<a id="preview-tech" href="/static/media/@category.Data.FeatureImage">产品特点</a>
		@: </div>
        }
	</div>
</div>
}