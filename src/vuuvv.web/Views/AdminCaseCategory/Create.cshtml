@using vuuvv.web.Models.ViewModel;
@using vuuvv.web.Models;
@model CaseCategory

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row-fluid">
	<div class="well">
		<ul class="nav nav-tabs">
			<li>
				<a href="/manage/admincasecategory/">工程案例类别列表</a>
			</li>
			<li class="active">
				<a href="/manage/admincasecategory/create">创建工程案例类别</a>
			</li>
		</ul>
		<div class="tab-content form-horizontal">
			<div class="tab-pane active in">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
                <div class="control-group">
                    <label class="control-label" for="Name">名称</label>
                    <div class="controls">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Slug">Slug</label>
                    <div class="controls">
                    @Html.EditorFor(model => model.Slug)
                    @Html.ValidationMessageFor(model => model.Slug)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Ordering">Ordering</label>
                    <div class="controls">
                    @Html.EditorFor(model => model.Ordering)
                    @Html.ValidationMessageFor(model => model.Ordering)
                    </div>
                </div>
				<div class="control-group">
					<div class="controls">
						<button type="submit" class="btn btn-primary">创建</button>
					</div>
                </div>
}

			</div>
		</div>
	</div>
</div>
