@using vuuvv.web.Models.ViewModel;
@using vuuvv.web.Models;
@model Slide

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row-fluid">
	<div class="well">
		<ul class="nav nav-tabs">
			<li>
				<a href="/manage/adminslide/">首页幻灯片</a>
			</li>
			<li class="active">
				<a href="/manage/adminslide/create">创建</a>
			</li>
		</ul>
		<div class="tab-content form-horizontal">
			<div class="tab-pane active in">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
                <div class="control-group">
                    <label class="control-label" for="Ordering">顺序</label>
                    <div class="controls">
                    @Html.EditorFor(model => model.Ordering)
                    @Html.ValidationMessageFor(model => model.Ordering)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Title">标题</label>
                    <div class="controls">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Link">链接</label>
                    <div class="controls">
                    @Html.EditorFor(model => model.Link)
                    @Html.ValidationMessageFor(model => model.Link)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Image">图片</label>
                    <div class="controls">
                        <div class="uploader" target="#Image" url="/manage/adminupload?path=home/slides" mode="nomedia"></div>
                        <input type="hidden" id="Image" name="Image" />
                        @Html.ValidationMessageFor(model => model.Image)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Active">有效</label>
                    <div class="controls">
                    @Html.EditorFor(model => model.Active)
                    @Html.ValidationMessageFor(model => model.Active)
                    </div>
                </div>
				<div class="control-group">
					<div class="controls">
						<button type="submit" class="btn btn-primary">创建</button>
					</div>
                </div>
}

			</div>
		</div>
	</div>
</div>
<link media="all" rel="stylesheet" href="/static/js/libs/artdialog/skins/default.css" type="text/css" />
<script src="/static/js/jquery.html5uploader.js" type="text/javascript"></script>
<script src="/static/js/libs/artdialog/jquery.artDialog.js" type="text/javascript"></script>
<script src="/static/js/upload.js" type="text/javascript"></script>
<script type="text/javascript">
    new Uploader({
        container: ".uploader"
    });
</script>
