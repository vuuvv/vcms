@using vuuvv.web.Models.ViewModel;
@using vuuvv.web.Models;
@model Area

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="/static/lib/ueditor/editor_config.js" type="text/javascript"></script>
<script src="/static/lib/ueditor/editor_all_min.js" type="text/javascript"></script>
<div class="row-fluid">
	<div class="well">
		<ul class="nav nav-tabs">
			<li>
                @Html.ActionLink("区域列表", "Index")
			</li>
			<li class="active">
                @Html.ActionLink("创建", "Create")
			</li>
		</ul>
		<div class="tab-content form-horizontal">
			<div class="tab-pane active in">
<form action="/manage/adminarea/create" method="post">
    @Html.ValidationSummary(true)
                <div class="control-group">
                    <label class="control-label" for="ParentId">上级区域</label>
                    <div class="controls">
            @Html.DropDownList("ParentId", String.Empty)
            @Html.ValidationMessageFor(model => model.ParentId)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Name">名称</label>
                    <div class="controls">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="boundary">边界</label>
                    <div class="controls">
            @Html.EditorFor(model => model.boundary)
            @Html.ValidationMessageFor(model => model.boundary)
                    </div>
                </div>
				<div class="control-group">
					<div class="controls">
						<button type="submit" class="btn btn-primary">创建</button>
                        <a class="btn" href="@Request.UrlReferrer">返回</a>
                        @Html.Hidden("nextStep", Request.UrlReferrer)
					</div>
                </div>
</form>

			</div>
		</div>
	</div>
</div>
