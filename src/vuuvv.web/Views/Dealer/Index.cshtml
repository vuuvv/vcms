@using vuuvv.web.Models
@model vuuvv.web.Models.ViewModel.RenderPage

@{
    List<Area> provinces = ViewBag.provinces;
}
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="content">
	<div class="dealer-container">
		<div class="dealer-search">
			<table cellspacing="0" cellpadding="0" border="0">
				<tr>
					<td width="7%">省 份：</td>
					<td width="20%">
						<select id="dealer-province" name="province">
							<option value="-1">-请选择-</option>
                            @foreach (var p in provinces)
                            {
							<option value="@p.Id">@p.Name</option>
                            }
						</select>
					</td>
					<td width="7%" >城 市：</td>
					<td width="20%">
						<select name="city" id="dealer-city" >
							<option value="-1">-请选择-</option>
						</select>
					</td>
					<td width="37%"></td>
					<td width="9%">
						<a href="#" id="dealer-search">
							<img src="/static/img/btnsearch.jpg" alt="" />
						</a>
					</td>
				</tr>
			</table>
		</div>
		<div class="dealer-list">
			<ul id="dealer-list">
			</ul>
		</div>
		<div class="dealer-location">
			<div class="address-search">
				<form id="address-search">
					<div class="address-input">
						<input type="text" id="address-input"/>
					</div>
					<div class="address-btn">
						<a href="javascript:;" id="address_btn">搜索</a>
					</div>
				</form>
			</div>
			<div class="dealer-map" id="dealer_map"></div>
		</div>
	</div>
</div>

@section ExtraCSS {
<link media="all" rel="stylesheet" href="/static/css/dealer.css" type="text/css" />
}

@section ExtraJS {
<script type="text/javascript" src="http://api.map.baidu.com/api?v=1.3"></script>
<script src="/static/js/map.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        var search = function () {
            var val = $("#address_input").val();
            map.address(val);
        };
        $("#address_search").submit(function () {
            search();
            return false;
        });
        new DealerMap();
    });
</script>
}

@section ExtraHead {
}

@section Overlay {
}
@section Banner {
