@using vuuvv.web.Models.ViewModel;
@using vuuvv.web.Models;
@model IEnumerable<BannerImage>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row-fluid">
	<div class="well">
		<ul class="nav nav-tabs">
			<li class="active">
				<a href="/manage/adminbannerimage/">产品类型幻灯片</a>
			</li>
			<li>
				<a href="/manage/adminbannerimage/create">创建</a>
			</li>
		</ul>
<form action="/manage/adminbannerimage/delete" method="post">
		<div class="tab-content">
			<div class="tab-pane active in">
				<div class="well">
					<table class="table">
						<thead>
							<tr>
                                <th>删除</th>
                                <th>Id</th>
								<th>产品类型</th>
								<th>顺序</th>
								<th>图片</th>
                                <th></th>
							</tr>
						</thead>
						<tbody>
@foreach (var item in Model)
{
							<tr>
                                <td><input type="checkbox" value="@item.Id" id="id" name="ids"></td>
								<td>@Html.DisplayFor(modelItem => item.Id)</td>
								<td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
								<td>@Html.DisplayFor(modelItem => item.Ordering)</td>
								<td><img src="/static/media/@item.Image" height="120" width="160"/></td>
								<td>
                                    @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
                                    <a href="/manage/adminbannerimage/Delete/@item.Id" onclick="return confirm('确定要删除吗？');">删除</a>
                                </td>
							</tr>
}
						</tbody>
					</table>
                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn btn-primary">删除</button>
                        </div>
                    </div>
                </div>
			</div>
		</div>
</form>
	</div>
</div>
