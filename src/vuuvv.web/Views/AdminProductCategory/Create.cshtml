@using vuuvv.web.Models.ViewModel;
@using vuuvv.web.Models;
@model vuuvv.web.Models.ProductCategory

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row-fluid">
	<div class="well">
		<ul class="nav nav-tabs">
			<li>
                @Html.ActionLink("页面列表", "Index")
			</li>
			<li class="active">
                @Html.ActionLink("创建页面", "Create")
			</li>
		</ul>
		<div class="tab-content form-horizontal">
			<div class="tab-pane active in">
<form action="/manage/adminproductcategory/create" method="post">
    @Html.ValidationSummary(true)
                <div class="control-group">
                    <label class="control-label" for="Name">父类</label>
                    <div class="controls">
            @Html.DropDownList("ParentId", String.Empty)
            @Html.ValidationMessageFor(model => model.ParentId)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Slug">名称</label>
                    <div class="controls">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Name">URL</label>
                    <div class="controls">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Description">描述</label>
                    <div class="controls">
                    @Html.TextAreaFor(model => model.Description, new { @class = "input-xxlarge"})
                    @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Image">图像</label>
                    <div class="controls">
                        <div class="uploader" target="#Image" mode="nomedia" url="/manage/adminupload?path=product/category"></div>
                        <input type="hidden" id="Image" name="Image" />
                        @Html.ValidationMessageFor(model => model.Image)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="FeatureImage">技术图像</label>
                    <div class="controls">
                        <div class="uploader" target="#FeatureImage" mode="nomedia" url="/manage/adminupload?path=product/category/feature"></div>
                        <input type="hidden" id="FeatureImage" name="FeatureImage" />
                        @Html.ValidationMessageFor(model => model.FeatureImage)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="MetaDescription">网页描述</label>
                    <div class="controls">
                    @Html.TextAreaFor(model => model.MetaDescription, new { @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.MetaDescription)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="MetaKeywords">网页关键字</label>
                    <div class="controls">
                    @Html.TextAreaFor(model => model.MetaKeywords, new { @class = "input-xxlarge" })
                    @Html.ValidationMessageFor(model => model.MetaKeywords)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Active">有效</label>
                    <div class="controls">
                    @Html.CheckBoxFor(model => model.Active)
                    @Html.ValidationMessageFor(model => model.Active)
                    </div>
                </div>
				<div class="control-group">
					<div class="controls">
						<button type="submit" class="btn btn-primary">创建</button>
                        <a class="btn" href="@Request.UrlReferrer">返回</a>
                        @Html.Hidden("nextStep", Request.UrlReferrer)
					</div>
                </div>
</form>

			</div>
		</div>
	</div>
</div>
<link media="all" rel="stylesheet" href="/static/js/libs/artdialog/skins/default.css" type="text/css" />
<script src="/static/js/jquery.html5uploader.js" type="text/javascript"></script>
<script src="/static/js/libs/artdialog/jquery.artDialog.js" type="text/javascript"></script>
<script src="/static/js/upload.js" type="text/javascript"></script>
<script type="text/javascript">
    new Uploader({
        container: ".uploader",
    });
</script>
