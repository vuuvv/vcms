@using vuuvv.web.Models
@model vuuvv.web.Models.ViewModel.RenderPage

@{
     CaseCategory category = ViewBag.category;
}
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="content">
	<div class="gallery">
		<div id="gallery">
            @foreach (var c in category.cases)
            {
			<li>
				<img src="/static/media/@c.Image" data-frame="/static/media/@c.Image" title="@c.Name" data-description="@c.Description" />
			</li>
            }
		</div>
	</div>
</div>

@section ExtraCSS {
<link rel="stylesheet" type="text/css" href="/static/js/libs/galleryview/css/jquery.galleryview-3.0-dev.css" />
<style type="text/css">
	.gallery {
		margin-top: 15px;
	}
</style>
}

@section ExtraJS {
<script type="text/javascript" src="/static/js/libs/galleryview/js/jquery.timers-1.2.js"></script>
<script type="text/javascript" src="/static/js/libs/galleryview/js/jquery.easing.1.3.js"></script>
<script type="text/javascript" src="/static/js/libs/galleryview/js/jquery.galleryview-3.0-dev.js"></script>
<script type="text/javascript">
	$(function() {
			$("#gallery").galleryView({
				frame_width: 180,
				frame_height: 90,
				show_captions: true,
				show_filmstrip_nav: false,
				enable_overlays: true,
				panel_width: 750,
				panel_height: 350
			});
	});
</script>

}

