@model vuuvv.web.Models.ViewModel.RenderPage
@{
    Layout = "~/Views/Shared/Layout.cshtml";
    List<vuuvv.web.Models.Magzine> magzines = ViewBag.magzines;
}

<div class="bookshelf">
    @for (int i = 0; i < magzines.Count; i += 4)
    {
	<div class="bookshelf-row">
		<div class="bookshelf-line clearfix">
        @for (int j = 0; j < 4; j++)
        {
            var index = i * 4 + j;
            if (index < magzines.Count)
            {
                var magzine = magzines[index];
			<a href="/static/media/upload/magzine/magzine.swf?xml=@magzine.Slug/pages.xml" alt="@magzine.Name" class="bookshelf-cell">
				<img src="/static/media/@magzine.Thumbnail" alt="@magzine.Name" title="@magzine.Name" />
			</a>
            }
        }
		</div>
	</div>
    }
</div>

@section ExtraCSS {
<link media="all" rel="stylesheet" href="/static/css/news.css" type="text/css" />
<link media="all" rel="stylesheet" href="/static/css/article.css" type="text/css" />
<link media="all" rel="stylesheet" href="/static/css/shadows.css" type="text/css" />
}

