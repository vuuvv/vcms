		<param name="movie" value="/flash/ad.swf">
		<param name="quality" value="high">
		<embed src="/flash/ad.swf" quality="high" pluginspage="http://www.macromedia.com/go/getflashplayer" type="application/x-shockwave-flash" width="521" height="157"></embed>
	</object>
</div>
}
