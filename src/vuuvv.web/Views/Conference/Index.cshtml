@model List<vuuvv.web.Models.ConferenceColumn>
@using vuuvv.web.Models;

@{
    ConferenceArticle article = ViewBag.article;
}

<!DOCTYPE HTML>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>中宇卫浴 • JOYOU | All In JOYOU</title>
	<link media="all" rel="stylesheet" href="/static/conference/css/main.css" type="text/css" />
	<script src="http://dl.everbox.com/www/javascripts/jquery.min.js" type="text/javascript"></script>
	<script type="text/javascript">
	    window.origin_tab = 5;
	</script>
	<script src="/static/conference/js/main.js" type="text/javascript"></script>
</head>

<body class="loading">
	<div id="wrapper">
    <div class="header"> </div>
		<div id="wrapper-inner">
			<div class="content">
				<div class="left">
					<div class="left-inner">
						<div class="left-nav">
                            @foreach(var column in @Model)
                            {
							<div class="border">
								<dl>
									<dt><span class="title">@column.Name</span></dt>
                                    @foreach (var a in column.Articles.OrderBy(a => a.Id))
                                    {
                                        if (a.Id == article.Id)
                                        {
                                        <dt class="current"><a class="sort">@a.Name</a></dt>
                                        }
                                        else
                                        {
                                        <dt><a class="sort" href="/2013/@a.Id">@a.Name</a></dt>
                                        }
                                    }
								</dl>
							</div>
                            }
						</div>
					</div>
				</div>
				<div class="content-inner">
					<h1>
                        @Html.Raw(article.Title)
					</h1>
					<div class="main-content-body">
                        @Html.Raw(article.Content)
					</div>
				</div>
				<div style="height: 50px;" class="clear"></div>
			</div>
		</div>
	</div>
</body>
</html>

